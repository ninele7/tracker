<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="habit" type="com.ninele7.tracker.model.Habit"/>
    </data>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout android:orientation="vertical"
                                                               android:layout_width="match_parent"
                                                               android:layout_height="wrap_content">
                <TextView android:text="@{habit.name}" android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          app:layout_constraintTop_toTopOf="parent"
                          app:layout_constraintStart_toStartOf="parent"
                          android:id="@+id/habit_name"
                          android:textSize="24sp"
                          android:padding="4dp"/>
                <TextView android:text="@{habit.description}" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:maxLines="2"
                          app:layout_constraintStart_toEndOf="@+id/habit_name"
                          app:layout_constraintEnd_toStartOf="@id/type_emoji"
                          app:layout_constraintTop_toTopOf="parent"
                          app:layout_constrainedWidth="true"
                          android:id="@+id/habit_description"
                          android:padding="4dp" android:layout_marginTop="4dp"
                          app:layout_constraintHorizontal_bias="0.0"/>
                <TextView android:text="@{habit.typeEmoji}"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"
                          app:layout_constraintTop_toTopOf="parent"
                          app:layout_constraintEnd_toEndOf="parent"
                          android:textSize="24sp"
                          android:padding="4dp"
                          android:id="@+id/type_emoji"/>
                <TextView android:text="@{habit.getPriorityCardText(context)}"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintTop_toBottomOf="@id/habit_name"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:paddingVertical="4dp" android:id="@+id/priority_text"
                          android:paddingHorizontal="4dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@{habit.getPeriodCardText(context)}"
                          app:layout_constraintTop_toBottomOf="@id/type_emoji"
                          app:layout_constraintEnd_toEndOf="parent" android:id="@+id/period_text"
                          android:paddingVertical="4dp"
                          android:paddingHorizontal="4dp"/>
                <View app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/habit_color"
                      app:layout_constraintTop_toBottomOf="@+id/period_text"
                      android:layout_width="match_parent" android:layout_height="8dp"
                      android:background="@{habit.color}"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</layout>

